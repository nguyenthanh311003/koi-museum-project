@model IEnumerable<RegistrationResponse>

@{
    ViewData["Title"] = "Registration List";
}

<h1>Registration List</h1>
<!-- Search Form -->
<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by Owner Name, Rank, or Contest Name" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Index" class="btn btn-secondary">Reset</a>
</form>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Registration</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ImageUrl)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Size)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Age)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ColorPattern)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().OwnerName)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Rank)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ContestName)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().RegistrationDate)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ApprovalDate)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().RejectedReason)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ConfirmationCode)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().IntroductionOfOwner)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().IntroductionOfKoi)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Status)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().AdminReviewedBy)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().UpdatedDate)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().UpdatedBy)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" alt="Koi Image" style="max-height: 100px;" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Size)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem => item.ColorPattern)</td>
                <td>@Html.DisplayFor(modelItem => item.OwnerName)</td>
                <td>@Html.DisplayFor(modelItem => item.Rank)</td>
                <td>@Html.DisplayFor(modelItem => item.ContestName)</td>
                <td>@Html.DisplayFor(modelItem => item.RegistrationDate)</td>
                <td>@Html.DisplayFor(modelItem => item.ApprovalDate)</td>
                <td>@Html.DisplayFor(modelItem => item.RejectedReason)</td>
                <td>@Html.DisplayFor(modelItem => item.ConfirmationCode)</td>
                <td>@Html.DisplayFor(modelItem => item.IntroductionOfOwner)</td>
                <td>@Html.DisplayFor(modelItem => item.IntroductionOfKoi)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.AdminReviewedBy)</td>
                <td>@Html.DisplayFor(modelItem => item.UpdatedDate)</td>
                <td>@Html.DisplayFor(modelItem => item.UpdatedBy)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
