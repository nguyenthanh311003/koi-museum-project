@model IEnumerable<KoiMuseum.Data.Dtos.Responses.Registration.RegistrationResponse>

@{
    ViewData["Title"] = "Registration List";
}

<h1>Registration List</h1>
<!-- Search Form -->
<form id="searchForm">
    <div class="form-group">
        <input type="text" id="searchString" name="searchString" class="form-control" placeholder="Search by Owner Name, Rank, or Contest Name" />
    </div>
    <button type="button" id="searchButton" class="btn btn-primary">Search</button>
    <a href="javascript:void(0)" id="resetButton" class="btn btn-secondary">Reset</a>
</form>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Registration</a>
</p>

<table class="table table-striped" id="registrationTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ImageUrl)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Size)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Age)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ColorPattern)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().OwnerName)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Rank)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ContestName)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().RegistrationDate)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ApprovalDate)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().RejectedReason)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ConfirmationCode)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().IntroductionOfOwner)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().IntroductionOfKoi)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Status)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().AdminReviewedBy)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().UpdatedDate)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().UpdatedBy)</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="registrationTableBody">
        <!-- Dynamic content will be added here via AJAX -->
    </tbody>
</table>

<div id="paginationControls">
    <button id="prevButton" class="btn btn-secondary" disabled>Previous</button>
    <button id="nextButton" class="btn btn-secondary">Next</button>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        let currentPage = 1;
        const limit = 10;

        $(document).ready(function () {
            loadRegistrations();

            $('#searchButton').on('click', function () {
                currentPage = 1; // Reset to first page when searching
                loadRegistrations($('#searchString').val());
            });

            $('#resetButton').on('click', function () {
                $('#searchString').val('');
                currentPage = 1; // Reset to first page
                loadRegistrations();
            });

            $('#prevButton').on('click', function () {
                if (currentPage > 1) {
                    currentPage--;
                    loadRegistrations($('#searchString').val());
                }
            });

            $('#nextButton').on('click', function () {
                currentPage++;
                loadRegistrations($('#searchString').val());
            });
        });

        function loadRegistrations(searchString = '') {
            $.ajax({
                url: '/api/Registrations', // Adjust to your API endpoint
                type: 'GET',
                data: { page: currentPage, limit: limit, searchString: searchString },
                success: function (data) {
                    $('#registrationTableBody').empty(); // Clear previous results

                    if (data && data.data && data.data.length > 0) {
                        data.data.forEach(function (item) {
                            $('#registrationTableBody').append(`
                                        <tr>
                                            <td><img src="${item.imageUrl}" alt="Koi Image" style="max-height: 100px;" /></td>
                                            <td>${item.size}</td>
                                            <td>${item.age}</td>
                                            <td>${item.colorPattern}</td>
                                            <td>${item.ownerName}</td>
                                            <td>${item.rank}</td>
                                            <td>${item.contestName}</td>
                                            <td>${item.registrationDate}</td>
                                            <td>${item.approvalDate}</td>
                                            <td>${item.rejectedReason}</td>
                                            <td>${item.confirmationCode}</td>
                                            <td>${item.introductionOfOwner}</td>
                                            <td>${item.introductionOfKoi}</td>
                                            <td>${item.status}</td>
                                            <td>${item.adminReviewedBy}</td>
                                            <td>${item.updatedDate}</td>
                                            <td>${item.updatedBy}</td>
                                            <td><a href="/Registration/Details/${item.id}" class="btn btn-sm btn-info">Details</a></td>
                                        </tr>
                                    `);
                        });
                    } else {
                        $('#registrationTableBody').append('<tr><td colspan="18" class="text-center">No registrations found.</td></tr>');
                    }

                    // Enable or disable pagination buttons based on current page
                    $('#prevButton').prop('disabled', currentPage === 1);
                    $('#nextButton').prop('disabled', data && data.data && data.data.length < limit);
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        }
    </script>
}
