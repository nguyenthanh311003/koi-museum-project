@model KoiMuseum.Data.Models.Rank

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white text-center">
                    <h3>Rank Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">Rank Name:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3 fw-bold">Criteria:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Criteria)</dd>

                        <dt class="col-sm-3 fw-bold">Reward:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Reward)</dd>

                        <dt class="col-sm-3 fw-bold">Description:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3 fw-bold">Min Size (cm):</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.MinSize)</dd>

                        <dt class="col-sm-3 fw-bold">Max Size (cm):</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.MaxSize)</dd>

                        <dt class="col-sm-3 fw-bold">Min Age (months):</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.MinAge)</dd>

                        <dt class="col-sm-3 fw-bold">Max Age (months):</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.MaxAge)</dd>

                        <dt class="col-sm-3 fw-bold">Variety Restriction:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.VarietyRestriction)</dd>

                        <dt class="col-sm-3 fw-bold">Created Date:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>

                        <dt class="col-sm-3 fw-bold">Created By:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedBy)</dd>

                        <dt class="col-sm-3 fw-bold">Updated Date:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedDate)</dd>

                        <dt class="col-sm-3 fw-bold">Updated By:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedBy)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@Model?.Id">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="fas fa-list"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
